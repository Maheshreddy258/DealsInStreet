<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
 <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_blacck"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="5">
        //home
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/home"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homeimage"
                android:src="@drawable/home_black"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/hometext"
               android:textColor="@color/light_blacck"
               android:textAppearance="?android:attr/textAppearanceSmall"
               android:text="Home"/>

        </LinearLayout>
        //maps
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/maps"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mapimage"
                android:src="@drawable/map_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/maptext"
                android:textColor="@color/light_blacck"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Map"/>

        </LinearLayout>
        //wishlist

        <LinearLayout
            android:id="@+id/wishlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wishlistimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wishlist_24" />

            <TextView
                android:id="@+id/wishlisttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wishlist"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/light_blacck" />

        </LinearLayout>
        //mystore
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/mystore"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mystoreimage"
                android:src="@drawable/favourites"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mystoretext"
                android:textColor="@color/light_blacck"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Favourites"/>

        </LinearLayout>
        //expiring
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/expiring"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/expiringimage"
                android:src="@drawable/expiring"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/expiringtext"

                android:textColor="@color/light_blacck"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Expiring"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>